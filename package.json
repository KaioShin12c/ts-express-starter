{
  "name": "ts-express-starter",
  "version": "1.0.0",
  "main": "dist/index.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KaioShin12c/ts-express-starter"
  },
  "scripts": {
    "dev": "node --import=tsx --watch src/index.ts",
    "start": "NODE_ENV=production node dist/index.js",
    "build": "tsc && tsup",
    "format": "biome format --write",
    "lint": "biome lint --write",
    "lint:fix": "biome lint --fix",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "biome format --write",
      "biome lint --fix"
    ]
  },
  "keywords": [
    "expressjs",
    "typescript",
    "starter",
    "nodejs",
    "boilerplate"
  ],
  "author": "Dat Nguyen",
  "license": "MIT",
  "description": "An Express.js + TypeScript starter project",
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.4",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "lodash": "^4.17.21",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.5",
    "@eslint/js": "^9.28.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/lodash": "^4.17.18",
    "@types/node": "^24.0.0",
    "@types/swagger-ui-express": "^4.1.8",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "outDir": "dist",
    "format": [
      "cjs"
    ],
    "target": "es2020",
    "sourcemap": true,
    "clean": true,
    "dts": true,
    "splitting": false,
    "skipNodeModulesBundle": true
  }
}
